#:kivy 2.1.0

<TimeTextInput@TextInput>:
    font_size: 20
    size_hint: 0.3, 0.1
    background_color: (.2,.2,.2,1) if self.focus else (0,0,0,0)
    foreground_color: (1,1,1,1)
    cursor_color: 1, 1, 1, 1

<DescriptionInput@TextInput>:
    font_size: 20
    size_hint: 0.7, 0.1
    background_color: (.2,.2,.2,1) if self.focus else (0,0,0,0)

    foreground_color: (1,1,1,1)
    cursor_color: 1, 1, 1, 1

<EventInput@GridLayout>:
    canvas.before:
        Color: 
            # change background of this layout when event is active
            rgba: 0,0,0,0
        Rectangle:
            pos: self.pos
            size: self.size
    cols: 2
    size_hint: 1, 0.1
  

<MainWindow>:
    orientation: "vertical"
    Label:
        size_hint: 1, 0.3
        font_size: 40
        color: (.9, .9, .9)
        text: "00:00:00"
        id: displayCurrentTime
    StackLayout:
        orientation: "lr-tb"
        size_hint: 1, 0.7

        EventInput:
            TimeTextInput:
                id: timetext0
                text: "13:15 - 13:45"
            DescriptionInput:
                text: "english read"
        EventInput:
            TimeTextInput:
                id: timetext1
                text: "13:45 - 14:45"
            DescriptionInput:
                text: "Android dev"
        
        EventInput:
            TimeTextInput:
                id: timetext2
                text: "14:45 - 15:30"
            DescriptionInput:
                text: "Chinese"
        
        # EventInput:
        #     TimeTextInput:
        #         id: timetext3
        #         text: "13:30 - 14:00"
        #     DescriptionInput:
        #         text: "English reading"
        # EventInput:
        #     TimeTextInput:
        #         id: timetext4
        #         text: "14:00 - 14:30"
        #     DescriptionInput:
        #         text: "Lunch"


        Button:
            text: "Done"
            size_hint: 1, 0.1
            on_press: root.getTimeTextInput()